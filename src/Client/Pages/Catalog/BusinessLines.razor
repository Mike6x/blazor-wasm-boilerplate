@page "/Catalog/BusinessLines"
@attribute [MustHavePermission(FSHAction.View, FSHResource.BusinessLines)]

@inject IStringLocalizer<BusinessLines> L
@inject IBusinessLinesClient BusinessLinesClient

<FshTitle Title="@L["BusinessLines"]" Description="@L["Manage BusinessLines."]" />

<EntityTable TEntity="BusinessLineDto" TId="Guid" TRequest="UpdateBusinessLineRequest" Context="@Context">
    <EditFormContent>
        @if (!Context.AddEditModal.IsCreate)
        {
            <MudItem xs="12" md="12">
                <MudTextField Value="context.Id" ReadOnly DisableUnderLine Label="@L[$"BusinessLine Id"]" />
            </MudItem>
        }

        <MudItem xs="12" md="3">
            <MudTextField Label="@L["Order"]" For="@(() => context.Order)" @bind-Value="context.Order" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MudTextField T="string" For="@(() => context.Code)" @bind-Value="context.Code" Label="@L["Code"]" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MudTextField T="string" For="@(() => context.Name)" @bind-Value="context.Name" Label="@L["Name"]" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MudCheckBox @bind-Checked="context.IsActive" For="@(() => context.IsActive)" Label="@L["Active"]"></MudCheckBox>
        </MudItem>
        <MudItem xs="12" md="12">
            <MudTextField Label="@L["Description"]" For="@(() => context.Description)" @bind-Value="context.Description" />
        </MudItem>
    </EditFormContent>

</EntityTable>