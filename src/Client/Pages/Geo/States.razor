@page "/Geo/States"
@attribute [MustHavePermission(FSHAction.View, FSHResource.States)]

@inject IStringLocalizer<States> L
@inject IStatesClient StatesClient

<FshTitle Title="@L["States"]" Description="@L["Manage States."]" />

<EntityTable TEntity="StateDto" TId="Guid" TRequest="UpdateStateRequest" Context="@Context">
    <EditFormContent>
        @if (!Context.AddEditModal.IsCreate)
        {
            <MudItem xs="12" md="12">
                <MudTextField Value="context.Id" ReadOnly DisableUnderLine Label="@L[$"State Id"]" />
            </MudItem>
        }
        <MudItem xs="12" md="3">
            <MudTextField Label="@L["Order"]" For="@(() => context.Order)" @bind-Value="context.Order" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MudTextField Label="@L["Code"]" For="@(() => context.Code)" @bind-Value="context.Code" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MudTextField Label="@L["Name"]" For="@(() => context.Name)" @bind-Value="context.Name" T="string" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MudTextField Label="@L["Formal Name"]" For="@(() => context.FullName)" @bind-Value="context.FullName" T="string" />
        </MudItem>

        <MudItem xs="12" md="3">
       </MudItem>
        <MudItem xs="12" md="3">
            <MudTextField Label="@L["Numeric Code"]" For="@(() => context.NumericCode)" @bind-Value="context.NumericCode" />
        </MudItem>

        <MudItem xs="12" md="3">
            <MudTextField Label="@L["Formal Native Name"]" For="@(() => context.NativeName)" @bind-Value="context.NativeName" T="string" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MudTextField Label="@L["Full Native Name"]" For="@(() => context.FullNativeName)" @bind-Value="context.FullNativeName" T="string" />
        </MudItem>

        <MudItem xs="12" md="3">
            <GeoAdminUnitAutocomplete For="@(() => context.TypeId)" @bind-Value="context.TypeId" Label="@L["Type"]" UnitType="GeoAdminUnitType.State"
                                        AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MudTextField Label="@L["Metropolis"]" For="@(() => context.Metropolis)" @bind-Value="context.Metropolis" T="string" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MudTextField Label="@L["Latitude"]" For="@(() => context.Latitude)" @bind-Value="context.Latitude" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MudTextField Label="@L["Longitude"]" For="@(() => context.Longitude)" @bind-Value="context.Longitude" />
        </MudItem>

        <MudItem xs="12" md="3">
            <GeoAdminUnitAutocomplete For="@(() => ContinentId)" @bind-Value="ContinentId" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter"
                                      Label="@L["Continent"]" UnitType="GeoAdminUnitType.Continent" />
        </MudItem>
        <MudItem xs="12" md="3">
            <GeoAdminUnitAutocomplete For="@(() => SubContinentId)" @bind-Value="SubContinentId" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter"
                                      Label="@L["SubContinent"]" UnitType="GeoAdminUnitType.SubContinent" />
        </MudItem>
        
        <MudItem xs="12" md="3">
            <CountryAutocomplete For="@(() => context.CountryId)" @bind-Value="context.CountryId" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter"
                                 ContinentIdStr="@ContinentId" SubContinentIdStr="SubContinentId" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MudCheckBox @bind-Checked="context.IsActive" For="@(() => context.IsActive)" Label="@L["Active"]"></MudCheckBox>
        </MudItem>

        <MudItem xs="12" md="12">
            <MudTextField Label="@L["Description"]" For="@(() => context.Description)" @bind-Value="context.Description" />
        </MudItem>

@*         <MudItem xs="12" md="8">
            <MudText Class="mb-n3" Typo="Typo.body2">
                <MudChip>@(ContinentId)</MudChip>
            </MudText>
        </MudItem>
        <MudItem xs="12" md="4">
        <MudTextField Label="@L[$"SubContinent Id"]" For="@(() => SubContinentId)" @bind-Value="SubContinentId" />
        </MudItem>*@

    </EditFormContent>
</EntityTable>