@page "/People/Titles"
@attribute [MustHavePermission(FSHAction.View, FSHResource.Titles)]

@inject IStringLocalizer<Titles> L
@inject ITitlesClient TitlesClient

<FshTitle Title="@L["Titles"]" Description="@L["Manage Titles."]" />

<EntityTable TEntity="TitleDto" TId="Guid" TRequest="UpdateTitleRequest" Context="@Context">
    <EditFormContent>
        @if (!Context.AddEditModal.IsCreate)
        {
            <MudItem xs="12" md="12">
                <MudTextField Value="context.Id" ReadOnly DisableUnderLine Label="@L[$"Title Id"]" />
            </MudItem>
        }

        <MudItem xs="12" md="3">
            <MudTextField Label="@L["Code"]" For="@(() => context.Code)" @bind-Value="context.Code" T="string" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MudTextField Label="@L["Name"]" For="@(() => context.Name)" @bind-Value="context.Name" T="string" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MudTextField Label="@L["Grade"]" For="@(() => context.Grade)" @bind-Value="context.Grade" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MudCheckBox @bind-Checked="context.IsActive" For="@(() => context.IsActive)" Label="@L["Active"]"></MudCheckBox>
        </MudItem>
        <MudItem xs="12" md="12">
            <MudTextField Label="@L["Description"]" For="@(() => context.Description)" @bind-Value="context.Description" T="string" />
        </MudItem>
    </EditFormContent>
</EntityTable>