@page "/Place/Channels"
@attribute [MustHavePermission(FSHAction.View, FSHResource.Channels)]

@inject IStringLocalizer<Channels> L
@inject IChannelsClient ChannelsClient

<FshTitle Title="@L["Channels"]" Description="@L["Manage Channels."]" />

<EntityTable TEntity="ChannelDto" TId="Guid" TRequest="UpdateChannelRequest" Context="@Context">
    <EditFormContent>
        @if (!Context.AddEditModal.IsCreate)
        {
            <MudItem xs="12" md="12">
                <MudTextField Value="context.Id" ReadOnly DisableUnderLine Label="@L[$"Channel Id"]" />
            </MudItem>
        }
        <MudItem xs="12" md="3">
            <MudTextField Label="@L["Order"]" For="@(() => context.Order)" @bind-Value="context.Order" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MudTextField Label="@L["Code"]" For="@(() => context.Code)" @bind-Value="context.Code" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MudTextField Label="@L["Name"]" For="@(() => context.Name)" @bind-Value="context.Name" T="string" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MudCheckBox @bind-Checked="context.IsActive" For="@(() => context.IsActive)" Label="@L["Active"]"></MudCheckBox>
        </MudItem>
        <MudItem xs="12" md="12">
            <MudTextField Label="@L["Description"]" For="@(() => context.Description)" @bind-Value="context.Description" />
        </MudItem>
    </EditFormContent>
</EntityTable>