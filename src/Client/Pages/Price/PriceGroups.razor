@page "/Price/PriceGroups"
@attribute [MustHavePermission(FSHAction.View, FSHResource.PriceGroups)]

@inject IStringLocalizer<PriceGroups> L
@inject IPriceGroupsClient PriceGroupsClient

<FshTitle Title="@L["PriceGroups"]" Description="@L["Manage PriceGroups."]" />

<EntityTable TEntity="PriceGroupDto" TId="Guid" TRequest="UpdatePriceGroupRequest" Context="@Context">
    <EditFormContent>
        @if (!Context.AddEditModal.IsCreate)
        {
            <MudItem xs="12" md="12">
                <MudTextField Value="context.Id" ReadOnly DisableUnderLine Label="@L[$"PriceGroup Id"]" />
            </MudItem>
        }
        <MudItem xs="12" md="3">
            <MudTextField Label="@L["Order"]" For="@(() => context.Order)" @bind-Value="context.Order" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MudTextField Label="@L["Code"]" For="@(() => context.Code)" @bind-Value="context.Code" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MudTextField Label="@L["Name"]" For="@(() => context.Name)" @bind-Value="context.Name" T="string" />
        </MudItem>
        <MudItem xs="12" md="3">
            <MudCheckBox @bind-Checked="context.IsActive" For="@(() => context.IsActive)" Label="@L["Active"]"></MudCheckBox>
        </MudItem>
        <MudItem xs="12" md="12">
            <MudTextField Label="@L["Description"]" For="@(() => context.Description)" @bind-Value="context.Description" />
        </MudItem>
    </EditFormContent>
</EntityTable>