    <MudItem xs="12" md="6">
        <MudTextField For="@(() => Password)" @bind-Value="Password" Label="Password"
                      InputType="@_passwordInput" Adornment="Adornment.End" AdornmentIcon="@_passwordInputIcon"
                      OnAdornmentClick="TogglePasswordVisibility" />
    </MudItem>
    <MudItem xs="12" md="6">
        <MudTextField For="@(() => ConfirmPassword)" @bind-Value="ConfirmPassword" Label="Confirm Password"
                      InputType="@_passwordInput" Adornment="Adornment.End" AdornmentIcon="@_passwordInputIcon"
                      OnAdornmentClick="TogglePasswordVisibility" />
    </MudItem>
